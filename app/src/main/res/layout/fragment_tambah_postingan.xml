<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp"
    android:id="@+id/tambahPostinganFragment"
    tools:context=".ui.papanpengumuman.TambahPostinganFragment">

    <!-- Header -->
    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_close_24"
        android:contentDescription="Tutup"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posting"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- EditText -->
    <EditText
        android:id="@+id/etPostContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Tulis sesuatu yang ingin anda umumkan ..."
        android:background="@null"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:minLines="6"
        android:maxLines="12"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btnPost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layoutIcons"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"/>

    <!-- Ikon Tambahan -->
    <LinearLayout
        android:id="@+id/layoutIcons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iconCamera"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_camera_alt_24"
            android:contentDescription="Kamera"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/iconGallery"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_add_photo_alternate_24"
            android:contentDescription="Galeri"
            android:padding="4dp"
            android:layout_marginStart="16dp"/>

        <ImageView
            android:id="@+id/iconLocation"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_location_pin_24"
            android:contentDescription="Lokasi"
            android:padding="4dp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
