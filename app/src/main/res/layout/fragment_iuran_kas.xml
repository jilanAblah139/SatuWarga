<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <!-- Kartu Tagihan -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTagihan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/blue_50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvKeluarga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keluarga Rahman W"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvBulan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agustus 2024"
                        android:textColor="#666"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvKeluarga" />

                    <TextView
                        android:id="@+id/tvTotalTagihan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Rp 100.000"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvBulan" />

                    <TextView
                        android:id="@+id/tvNote"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Satu keluarga atau KK, satu kali pembayaran. Tagihan tidak untuk perorangan"
                        android:textColor="#666"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTotalTagihan" />

                    <Button
                        android:id="@+id/btnBayar"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:text="Bayar Tagihan"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvNote" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Riwayat Pembayaran -->
            <TextView
                android:id="@+id/tvRiwayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riwayat Pembayaran"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/cardTagihan"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Kartu Riwayat 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardRiwayat1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/tvRiwayat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvKeluargaRiwayat1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Keluarga Rahman W"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvTanggal1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="29 Juli 2024, 17:00 WIB"
                        app:layout_constraintTop_toBottomOf="@id/tvKeluargaRiwayat1"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvBank1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank BNI"
                        app:layout_constraintTop_toBottomOf="@id/tvTanggal1"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvNominal1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 100.000"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvLunas1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lunas"
                        android:textColor="@android:color/holo_green_dark"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Kartu Riwayat 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardRiwayat2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/cardRiwayat1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="32dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvKeluargaRiwayat2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Keluarga Rahman W"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvTanggal2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="29 Juni 2024, 17:00 WIB"
                        app:layout_constraintTop_toBottomOf="@id/tvKeluargaRiwayat2"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvBank2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank BNI"
                        app:layout_constraintTop_toBottomOf="@id/tvTanggal2"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvNominal2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 100.000"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvLunas2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lunas"
                        android:textColor="@android:color/holo_green_dark"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
