<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.keuangan.LaporanKeuanganFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/saldoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center">

        <!-- Total Saldo -->
        <TextView
            android:id="@+id/totalSaldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Saldo"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Nominal Saldo -->
        <TextView
            android:id="@+id/textView2"
            style="@style/TextAppearance.Material3.TitleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Rp. 1.000.000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/totalSaldo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Info update terakhir -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Terakhir Diupdate 21/04/2025"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Judul Rincian -->
        <TextView
            android:id="@+id/judulRincian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Rincian Keuangan"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Card 1 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardSaldo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/judulRincian"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/iconBackground1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/iconImage1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_arrow_downward_24"
                    android:contentDescription="icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/textContainer1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/iconBackground1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/amountText1">

                <TextView
                    android:id="@+id/titleText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saldo Sebelumnya"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/dateText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 April 2025, 10:00 WIB"
                    android:textSize="12sp"
                    android:textColor="#808080" />
            </LinearLayout>

            <TextView
                android:id="@+id/amountText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Rp 2.000.000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#00C47A"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Card 2 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardSaldo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/cardSaldo1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/iconBackground2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/iconImage2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_arrow_upward_24"
                    android:contentDescription="icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/textContainer2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/iconBackground2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/amountText2">

                <TextView
                    android:id="@+id/titleText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gotong Royong Membersihkan Got"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/dateText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21 April 2025, 14:30 WIB"
                    android:textSize="12sp"
                    android:textColor="#808080" />
            </LinearLayout>

            <TextView
                android:id="@+id/amountText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Rp 500.000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF3B30"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Card 3 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardSaldo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/cardSaldo2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/iconBackground3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/iconImage3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_arrow_downward_24"
                    android:contentDescription="icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/textContainer3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/iconBackground3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/amountText3">

                <TextView
                    android:id="@+id/titleText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saldo Penambahan"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/dateText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22 April 2025, 09:00 WIB"
                    android:textSize="12sp"
                    android:textColor="#808080" />
            </LinearLayout>

            <TextView
                android:id="@+id/amountText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Rp 1.000.000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#00C47A"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Card 4 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardSaldo4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/cardSaldo3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/iconBackground4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/iconImage4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_arrow_upward_24"
                    android:contentDescription="icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/textContainer4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/iconBackground4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/amountText4">

                <TextView
                    android:id="@+id/titleText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saldo Transfer"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/dateText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23 April 2025, 12:15 WIB"
                    android:textSize="12sp"
                    android:textColor="#808080" />
            </LinearLayout>

            <TextView
                android:id="@+id/amountText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Rp 3.500.000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#00C47A"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
